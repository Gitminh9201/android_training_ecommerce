<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingVertical="25dp"
    android:gravity="center"
    android:background="@drawable/bg_border_strong"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/ll_make_image"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/image_camera_circle"
            android:layout_height="28dp"/>
        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/make_image"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="12dp"/>
    <LinearLayout
        android:paddingHorizontal="20dp"
        android:id="@+id/ll_choose_image"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="28dp"
            android:src="@drawable/image_gallery"
            android:layout_height="28dp"/>
        <LinearLayout
            android:layout_width="8dp"
            android:layout_height="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:text="@string/choose_image"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>