<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/layout_cart"
    android:layout_height="match_parent"
    tools:context=".mvp.payment_method.PaymentMethodActivity">
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include layout="@layout/toolbar"/>
            <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:layout_width="match_parent"
                android:id="@+id/swiperefresh"
                android:layout_height="match_parent">
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rv_coupons"
                        android:scrollbars="vertical"
                        android:padding="6dp"
                        android:layout_height="match_parent"/>
                </androidx.core.widget.NestedScrollView>
            </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:visibility="gone"
                android:drawableRight="@drawable/ic_round_local_play"
                android:layout_marginVertical="16dp"
                android:layout_marginHorizontal="12dp"
                android:id="@+id/edit_coupons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_border_white_4"
                android:hint="Input code..."
                android:enabled="true"
                android:focusable="true"
                android:maxLines="1"
                android:cursorVisible="true"
                android:focusedByDefault="true"
                android:paddingHorizontal="12dp"
                android:paddingVertical="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/colorDispose"
                android:textSize="14dp" />
            <Button
                android:id="@+id/btn_save_coupons"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="2dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/bg_button_continue"
                android:layout_marginHorizontal="12dp"
                android:text="@string/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:id="@+id/ll_load_coupons"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/loading"/>
    </LinearLayout>

</RelativeLayout>