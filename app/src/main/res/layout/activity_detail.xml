<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_detail"
    tools:context=".mvp.detail.DetailActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/toolbar_common"/>
        <androidx.core.widget.NestedScrollView
            android:paddingBottom="@dimen/height_tab"
            android:layout_width="match_parent"
            android:background="@color/colorWhite"
            android:layout_height="match_parent">
            <LinearLayout
                android:weightSum="10"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:id="@+id/ll_gallery_detail"
                    android:orientation="horizontal"
                    android:weightSum="5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_gallery">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_margin="@dimen/card_margin"
                        android:elevation="@dimen/card_elevation"
                        app:cardCornerRadius="@dimen/card_album_radius"
                        android:layout_height="match_parent">
                        <androidx.viewpager.widget.ViewPager
                            android:id="@+id/vp_gallery_detail"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:paddingHorizontal="4dp"
                        android:paddingTop="20dp"
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="@dimen/height_gallery">

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginHorizontal="2dp"
                        android:background="@color/colorGrey"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>
                    <TextView
                        android:id="@+id/txt_title_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:textAllCaps="true"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_price_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorRed"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt_price_compare_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorBlack"
                            android:textSize="12sp"
                            android:textStyle="italic" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/txt_content_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textAllCaps="true"
                        android:textStyle="italic" />
                    <LinearLayout
                        android:layout_marginHorizontal="4dp"
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_image_brand"
                            android:background="@drawable/bg_border_white"
                            android:layout_width="45dp"
                            android:layout_height="45dp"/>
                        <TextView
                            android:layout_marginLeft="4dp"
                            android:id="@+id/txt_title_brand_detail"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/colorGrey"
                        android:layout_width="100dp"
                        android:layout_height="1dp"/>
                    <TextView
                        android:layout_marginHorizontal="4dp"
                        android:id="@+id/txt_description_brand"
                        android:layout_width="match_parent"
                        android:padding="4dp"
                        android:textSize="14sp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/colorGrey"
                        android:layout_width="200dp"
                        android:layout_height="1dp"/>
                    <LinearLayout
                        android:layout_marginHorizontal="4dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="10dp"
                            android:background="@drawable/ic_dot"
                            android:layout_height="10dp"/>
                        <TextView
                            android:id="@+id/txt_country_brand"
                            android:layout_width="match_parent"
                            android:padding="4dp"
                            android:textColor="@color/colorDispose"
                            android:textSize="14sp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="4dp"
                        android:background="@color/colorGrey"
                        android:layout_width="300dp"
                        android:layout_height="1dp"/>
                    <include layout="@layout/group_product"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_tab">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/colorGrey"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_tab">
            <ImageButton
                android:id="@+id/ib_add_bookmark"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/colorWhite"
                android:layout_margin="0dp"
                android:src="@drawable/ic_bookmark"
                android:layout_height="match_parent"/>
            <ImageButton
                android:id="@+id/ib_add_cart"
                android:background="@color/colorWhite"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:src="@drawable/ic_add_cart"
                android:layout_height="match_parent"/>
            <TextView
                android:paddingVertical="14dp"
                android:fontFamily="@string/font_family_condensed"
                android:id="@+id/txt_buy_now"
                android:layout_width="0dp"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:text="BUY NOW"
                android:textSize="16dp"
                android:scrollbars="horizontal"
                android:background="@drawable/image_buynow"
                android:textStyle="italic|bold"
                android:layout_weight="2"
                android:layout_height="48dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:id="@+id/ll_load_detail"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/loading"/>
    </LinearLayout>
</RelativeLayout>