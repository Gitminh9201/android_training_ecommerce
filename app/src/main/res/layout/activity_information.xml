<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/layout_cart"
    android:layout_height="match_parent"
    tools:context=".mvp.address.AddressActivity">
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">
            <include layout="@layout/toolbar"/>
            <androidx.core.widget.NestedScrollView
                android:paddingHorizontal="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingVertical="6dp"
                    android:paddingHorizontal="6dp"
                    android:layout_marginHorizontal="12dp"
                    android:padding="@dimen/card_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_marginTop="10dp"
                        android:id="@+id/profile_image"
                        android:layout_width="92dp"
                        android:layout_gravity="center"
                        android:layout_height="92dp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="92dp"
                            android:layout_height="92dp"
                            android:id="@+id/ci_circleAvatar"
                            android:src="@drawable/image_profile"
                            android:layout_marginBottom="10dp"/>
                        <ImageView
                            android:layout_margin="10dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="22dp"
                            android:src="@drawable/image_camera_circle"
                            android:layout_height="22dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/info_name"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <EditText
                        android:inputType="text"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/bg_border_primary"
                        android:id="@+id/edit_info_name"
                        android:focusable="auto"
                        android:nextFocusDown="@id/edit_info_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/info_name" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/info_email"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <EditText
                        android:inputType="textEmailAddress"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/bg_border_primary"
                        android:id="@+id/edit_info_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nextFocusDown="@id/edit_info_phone"
                        android:layout_marginBottom="16dp"
                        android:maxLines="1"
                        android:hint="@string/info_email" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/info_phone"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <EditText
                        android:inputType="phone"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/bg_border_primary"
                        android:id="@+id/edit_info_phone"
                        android:nextFocusDown="@id/edit_info_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:layout_marginBottom="16dp"
                        android:hint="@string/info_phone" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/info_birthday"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/colorRed"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <EditText
                        android:clickable="true"
                        android:editable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusedByDefault="false"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="16dp"
                        android:background="@drawable/bg_border_primary"
                        android:id="@+id/edit_info_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:maxLines="1"
                        android:hint="@string/info_birthday" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <Button
            android:enabled="true"
            android:id="@+id/btn_save"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_button_continue"
            android:layout_marginHorizontal="12dp"
            android:text="@string/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:id="@+id/ll_load_info"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/loading"/>
    </LinearLayout>

</RelativeLayout>