<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:id="@+id/layout_invoice"
    android:layout_height="match_parent"
    tools:context=".mvp.detail_invoice.DetailInvoiceActivity">
    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <include layout="@layout/toolbar"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingVertical="8dp"
                    android:layout_marginHorizontal="14dp"
                    android:padding="@dimen/card_margin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginVertical="6dp"
                        android:textSize="15sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="@string/product_had_buy"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:padding="4dp"
                        android:layout_marginBottom="6dp"
                        android:layout_width="match_parent"
                        android:id="@+id/rv_invoice"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorGreyCancel"
                        android:text="@string/address"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:id="@+id/txt_addres_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorGreyCancel"
                        android:text="@string/number_phone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:id="@+id/txt_phone_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorGreyCancel"
                        android:text="@string/payment_method"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:id="@+id/txt_method_payment_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorGreyCancel"
                        android:text="@string/status_invoice"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_marginBottom="@dimen/card_margin"
                            android:elevation="@dimen/card_elevation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:paddingHorizontal="4dp"
                                android:paddingVertical="2dp"
                                android:elevation="@dimen/card_elevation"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_marginRight="4dp"
                                    android:id="@+id/ll_icon_status_invoice"
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"/>
                                <TextView
                                    android:textSize="11sp"
                                    android:gravity="start"
                                    android:id="@+id/txt_status_invoice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="13sp"
                        android:textColor="@color/colorGreyCancel"
                        android:text="@string/total_payment"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:id="@+id/txt_total_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:text="-"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:id="@+id/txt_discount_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:gravity="end"
                        android:layout_marginHorizontal="12dp"
                        android:layout_gravity="end"
                        android:layout_width="120dp"
                        android:layout_height="1dp"
                        android:background="@color/colorGrey"/>
                    <TextView
                        android:gravity="end"
                        android:layout_gravity="end"
                        android:layout_marginHorizontal="12dp"
                        android:layout_marginTop="6dp"
                        android:textSize="14sp"
                        android:id="@+id/txt_total_result_invoice"
                        android:textColor="@color/colorPrimary"
                        android:textAllCaps="true"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
        <Button
            android:id="@+id/btn_change_detail_invoice"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/bg_button_continue"
            android:layout_marginHorizontal="12dp"
            android:text="@string/cancel_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:id="@+id/ll_load_invoice"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/loading"/>
    </LinearLayout>

</RelativeLayout>